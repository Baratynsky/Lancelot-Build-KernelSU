# Основные параметры устройства
export ARCH=arm64
export DEVICE=lancelot
export DEFCONFIG=lancelot_defconfig

# Настройки Clang
export CLANG_VERSION=clang-r383902b
export CLANG_DIR=clang
export CLANG_BIN=$(pwd)/${CLANG_DIR}/bin

# Настройки кросс-компиляции
export CROSS_COMPILE=aarch64-linux-gnu-
export CROSS_COMPILE_ARM32=arm-linux-gnueabi-
export CLANG_TRIPLE=aarch64-linux-gnu-

# Пути к исходникам
export KERNEL_DIR=kernel
export KERNELSU_DIR=KernelSU
export ANY_KERNEL_DIR=AnyKernel3  # Если используете AnyKernel3

# Параметры репозиториев
export KERNEL_REPO=https://github.com/Jbub5/android_kernel_xiaomi_mt6768
export KERNEL_BRANCH=kernel-tree-wip
export KERNELSU_REPO=https://github.com/tiann/KernelSU
export KERNELSU_BRANCH=next

# Флаги сборки
export KBUILD_BUILD_USER=github-actions
export KBUILD_BUILD_HOST=kernelsu-builder
export KBUILD_BUILD_VERSION=1.0

# MTK специфика
export PLATFORM_VERSION=12
export PROJECT=mt6768
export TARGET_PRODUCT=mt6768
